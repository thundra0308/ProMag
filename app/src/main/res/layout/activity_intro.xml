<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.IntroActivity">

    <TextView
        android:id="@+id/protext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#FBA7C4"
        android:text="ProMag"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgtask"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_task_image"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/protext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lestext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="Let's Get You Started"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgtask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/coltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Colaborate and Plan Together Across Multiple \nDevices on Promag's Minimalist Interface"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lestext"/>

    <Button
        android:id="@+id/signin"
        android:layout_width="320dp"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"
        android:text="Sign IN"
        android:foreground="?attr/selectableItemBackground"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:backgroundTint="@null"
        android:textColor="@color/white"
        android:background="@drawable/signbutton_selected"
        app:layout_constraintTop_toBottomOf="@id/coltext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/signup"
        android:layout_width="320dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:text="Sign UP"
        android:foreground="?attr/selectableItemBackground"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:backgroundTint="@null"
        android:background="@drawable/signbutton_notselected"
        android:textColor="#FF8BB3"
        app:layout_constraintTop_toBottomOf="@id/signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>